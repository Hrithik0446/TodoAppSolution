<Window x:Class="TodoClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shared To-Do List" Height="450" Width="520">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox x:Name="NewItemTextBox" Width="380" Height="30" Margin="0,0,8,0"/>
            <Button x:Name="AddButton" Content="Add" Width="100" Height="30" Click="AddButton_Click"/>
        </StackPanel>

        <ListView x:Name="TodoListView" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="4">
                        <CheckBox IsChecked="{Binding IsCompleted, Mode=TwoWay}" Click="CheckBox_Click" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Description}" Margin="12,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>